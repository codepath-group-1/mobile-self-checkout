<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.shopmyself">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_cart"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ContinuousCaptureActivity"
            android:label="@string/title_activity_scan_barcode"
            android:screenOrientation="fullSensor" />
        <activity android:name=".activities.ProductDetailsActivity" />
        <activity android:name=".activities.EmailPasswordActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.PaymentDetailsActivity" />
        <activity android:name=".activities.CheckoutActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2d3e3d3e48027d14cf366a8464b8bf46c21b8db7" />

    </application>

</manifest>
