<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.codepath.shopmyself">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.CustomScannerActivity"
            android:label="@string/title_activity_scan_barcode"
            android:screenOrientation="fullSensor"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2d3e3d3e48027d14cf366a8464b8bf46c21b8db7"/>

        <activity android:name=".Activities.ProductDetailsActivity"/>
        <activity android:name=".Activities.EmailPasswordActivity"/>
        <activity android:name=".Activities.SignUpActivity"/>
    </application>

</manifest>