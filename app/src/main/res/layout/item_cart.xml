<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Cart item image"
        android:id="@+id/ivCartItemImage"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:id="@+id/ibDeleteButton"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivCartItemImage"
        android:layout_alignBottom="@+id/ivCartItemImage"/>


    <TextView
        android:text="$19.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivCartItemImage"
        android:layout_alignBottom="@id/ivCartItemImage"
        android:layout_toLeftOf="@id/ibDeleteButton"
        android:id="@+id/tvCartItemPrice"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>



    <TextView
        android:text="Asics Shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivCartItemImage"
        android:layout_alignBottom="@id/ivCartItemImage"
        android:layout_toRightOf="@id/ivCartItemImage"
        android:layout_toLeftOf="@id/tvCartItemPrice"
        android:id="@+id/tvCartItemName"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>






</RelativeLayout>